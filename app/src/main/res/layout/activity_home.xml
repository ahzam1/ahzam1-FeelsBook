<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBG"
    tools:context=".Home">

    <TextView
        android:id="@+id/lblTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/app_title"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:targetApi="lollipop" />

    <Button
        android:id="@+id/btnLove"
        android:tag="Love"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="4dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="4dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="24dp"
        android:onClick="AddFeeling"
        android:background="@color/colorLove"
        app:layout_constraintEnd_toStartOf="@+id/btnLoveC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblTitle"
        android:text="@string/btn_Love" />

    <ImageButton
        android:id="@+id/btnLoveC"
        android:tag="Love"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="24dp"
        android:onClick="getComment"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="24dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        android:background="@color/colorLove"
        android:contentDescription="love comment button"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnLove"
        app:layout_constraintTop_toBottomOf="@+id/lblTitle"
        app:srcCompat="@drawable/comment" />

    <Button
        android:id="@+id/btnJoy"
        android:tag="Joy"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="4dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="4dp"
        android:layout_marginStart="20dp"
        android:onClick="AddFeeling"
        android:layout_marginTop="12dp"
        android:background="@color/colorJoy"
        app:layout_constraintEnd_toStartOf="@+id/btnJoyC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLove"
        android:text="@string/btn_Joy" />

    <ImageButton
        android:id="@+id/btnJoyC"
        android:layout_width="50dp"
        android:tag="Joy"
        android:layout_height="50dp"
        android:layout_marginEnd="24dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="24dp"
        android:onClick="getComment"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:background="@color/colorJoy"
        android:contentDescription="joy comment @android:string/VideoView_error_button"
        android:cropToPadding="true"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnJoy"
        app:layout_constraintTop_toBottomOf="@+id/btnLoveC"
        app:srcCompat="@drawable/comment" />

    <Button
        android:id="@+id/btnSurprise"
        android:tag="Surprise"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginEnd="4dp"
        android:onClick="AddFeeling"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="4dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:background="@color/colorSurprise"
        android:text="@string/btn_Surprise"
        app:layout_constraintEnd_toStartOf="@+id/btnSurpriseC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnJoy" />

    <ImageButton
        android:id="@+id/btnSurpriseC"
        android:layout_width="50dp"
        android:tag="Surprise"
        android:onClick="getComment"
        android:layout_height="50dp"
        android:layout_marginEnd="24dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="24dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:background="@color/colorSurprise"
        android:cropToPadding="true"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnSurprise"
        app:layout_constraintTop_toBottomOf="@+id/btnJoyC"
        app:srcCompat="@drawable/comment" />

    <Button
        android:id="@+id/btnAnger"
        android:layout_width="0dp"
        android:tag="Anger"
        android:onClick="AddFeeling"
        android:layout_height="50dp"
        android:layout_marginEnd="4dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="4dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:background="@color/colorAnger"
        android:text="@string/btn_Anger"
        app:layout_constraintEnd_toStartOf="@+id/btnAngerC"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSurprise" />

    <Button
        android:id="@+id/btnSadness"
        android:layout_width="0dp"
        android:onClick="AddFeeling"
        android:tag="Sadness"
        android:layout_height="50dp"
        android:layout_marginEnd="4dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="4dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:background="@color/colorSadness"
        android:text="@string/btn_Sadness"
        app:layout_constraintEnd_toStartOf="@+id/btnSadnessC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnAnger" />

    <Button
        android:id="@+id/btnFear"
        android:layout_width="0dp"
        android:tag="Fear"
        android:onClick="AddFeeling"
        android:layout_height="50dp"
        android:layout_marginEnd="4dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="4dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:background="@color/colorFear"
        android:text="@string/btn_Fear"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/btnFearC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSadness"
        tools:text="@string/btn_Fear" />

    <ImageButton
        android:id="@+id/btnAngerC"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="24dp"
        android:layout_marginLeft="4dp"
        android:onClick="getComment"
        android:tag="Anger"
        android:layout_marginRight="24dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="12dp"
        android:background="@color/colorAnger"
        android:cropToPadding="true"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnAnger"
        app:layout_constraintTop_toBottomOf="@+id/btnSurpriseC"
        app:srcCompat="@drawable/comment" />

    <ImageButton
        android:id="@+id/btnSadnessC"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="24dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="24dp"
        android:onClick="getComment"
        android:layout_marginStart="4dp"
        android:tag="Sadness"
        android:layout_marginTop="12dp"
        android:background="@color/colorSadness"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnSadness"
        app:layout_constraintTop_toBottomOf="@+id/btnAngerC"
        app:srcCompat="@drawable/comment" />

    <ImageButton
        android:id="@+id/btnFearC"
        android:layout_width="50dp"
        android:onClick="getComment"
        android:layout_height="50dp"
        android:layout_marginEnd="24dp"
        android:layout_marginLeft="4dp"
        android:layout_marginRight="24dp"
        android:layout_marginStart="4dp"
        android:tag="Fear"
        android:layout_marginTop="12dp"
        android:background="@color/colorFear"
        android:cropToPadding="true"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnFear"
        app:layout_constraintTop_toBottomOf="@+id/btnSadnessC"
        app:srcCompat="@drawable/commenti" />

    <Button
        android:id="@+id/btnHistory"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="10dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="16dp"
        android:onClick="viewHistory"
        android:text="@string/btn_History"
        app:layout_constraintEnd_toStartOf="@+id/btnTotals"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnFear" />

    <Button
        android:id="@+id/btnTotals"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:layout_marginLeft="49dp"
        android:layout_marginRight="60dp"
        android:layout_marginStart="49dp"
        android:layout_marginTop="16dp"
        android:text="@string/btn_Counter"
        android:onClick="viewTotals"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnHistory"
        app:layout_constraintTop_toBottomOf="@+id/btnFear" />

</android.support.constraint.ConstraintLayout>